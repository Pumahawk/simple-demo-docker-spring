FROM maven:3.6.1-jdk-8-alpine

ARG TOMCAT_WEB_PORT=8080
ARG TOMCAT_DEBUG_PORT=8000

WORKDIR /app

COPY cmd.sh cmd.sh

RUN chmod a+x cmd.sh && dos2unix cmd.sh

EXPOSE ${TOMCAT_WEB_PORT} ${TOMCAT_DEBUG_PORT}

ENV TOMCAT_WEB_PORT=${TOMCAT_WEB_PORT}
ENV TOMCAT_DEBUG_PORT=${TOMCAT_DEBUG_PORT}

CMD ./cmd.sh
